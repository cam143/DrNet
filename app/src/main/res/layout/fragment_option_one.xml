<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.truiton.drnet.ItemOneFragment">

    <com.github.anastr.speedviewlib.AwesomeSpeedometer
        android:id="@+id/speedDownload"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:sv_unitTextSize="8dp"
        app:sv_unit="Mb/s"
        />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:layout_below="@+id/speedDownload"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/progressBarLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:progress_text_size="15dp"
        />

    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/red_button"
        android:layout_margin="20dp"
        android:id="@+id/buttonTroubleshoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/troubleshoot" />

</RelativeLayout>